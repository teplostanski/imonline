{
  "name": "nche",
  "version": "2.0.0-beta.0",
  "description": "Network Checker is a user-friendly CLI (TUI) application that offers real-time IP discovery, ping statistics, and speed testing to optimize your network performance.",
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "prettier": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "prepack": "npm run build && oclif manifest && oclif readme",
    "postpack": "shx rm -f oclif.manifest.json",
    "prepare": "husky",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "posttest": "npm run lint",
    "release": "standard-version",
    "release:major": "npm run release -- --release-as major",
    "release:minor": "npm run release -- --release-as minor",
    "release:patch": "npm run release -- --release-as patch",
    "prerelease:major:alpha": "npm run release -- --release-as major --prerelease alpha",
    "prerelease:major:beta": "npm run release -- --release-as major --prerelease beta",
    "prerelease:minor:alpha": "npm run release -- --release-as minor --prerelease alpha",
    "prerelease:minor:beta": "npm run release -- --release-as minor --prerelease beta",
    "prerelease:patch:alpha": "npm run release -- --release-as patch --prerelease alpha",
    "prerelease:patch:beta": "npm run release -- --release-as patch --prerelease beta"
  },
  "keywords": [
    "network",
    "tools",
    "cli",
    "tui",
    "ip address",
    "ping",
    "speed",
    "test",
    "network-performance",
    "internet-speed",
    "command-line",
    "real-time-network",
    "network-monitoring",
    "network-optimization",
    "network-checker",
    "tech-tools",
    "ink"
  ],
  "homepage": "https://github.com/teplostanski/nche#readme",
  "bugs": "https://github.com/teplostanski/nche/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/teplostanski/nche.git"
  },
  "license": "GPL-3.0-only",
  "author": {
    "name": "Igor Teplostanski",
    "email": "teplostanski@yandex.ru",
    "url": "https://teplostanski.dev"
  },
  "funding": {
    "type": "crypto",
    "url": "https://donate.teplostanski.dev"
  },
  "type": "module",
  "exports": "./lib/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "nche": "bin/run.js"
  },
  "files": [
    "/bin",
    "/dist",
    "/oclif.manifest.json",
    "/LICENSE.md"
  ],
  "oclif": {
    "bin": "nche",
    "commands": {
      "strategy": "single",
      "target": "./dist/commands/index.js"
    },
    "dirname": "nche",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ]
  },
  "dependencies": {
    "@oclif/core": "^3",
    "@oclif/plugin-help": "^6",
    "@oclif/plugin-plugins": "^5",
    "axios": "^1.6.8",
    "chalk": "^5.3.0",
    "immer": "^10.0.4",
    "ink": "^4.4.1",
    "ink-link": "^3.0.0",
    "ink-spinner": "^5.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@oclif/prettier-config": "^0.2.1",
    "@oclif/test": "^3",
    "@types/chai": "^4",
    "@types/mocha": "^10",
    "@types/node": "^20.12.7",
    "@types/react": "^18.2.77",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "chai": "^4",
    "eslint": "^8",
    "eslint-config-oclif": "^5",
    "eslint-config-oclif-typescript": "^3",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "mocha": "^10",
    "oclif": "^4.7.3",
    "prettier": "^3.2.5",
    "shx": "^0.3.4",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.2",
    "typescript": "5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
